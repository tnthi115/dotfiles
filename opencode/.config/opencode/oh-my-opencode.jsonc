{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",

  "agents": {
    "build": {
      "model": "f5/claude-sonnet-4-5"
    },
    "plan": {
      "model": "f5/claude-sonnet-4-5"
    },
    "sisyphus": {
      "model": "f5/claude-opus-4-5",
      // Tool selection: native LSP first → escalate to Serena for symbol editing → fallback on failures
      "prompt_append": "Use native LSP tools (lsp_goto_definition, lsp_find_references, lsp_rename) and AST-grep for most code navigation and pattern matching. Escalate to Serena MCP for: (1) symbol-addressable editing (serena_replace_symbol_body, serena_insert_after_symbol), (2) guided refactoring pipelines, (3) repos with weak LSP support. If Serena fails or times out, fall back to native Read/Grep/Edit tools. Use Serena memory (serena_write_memory/read_memory) only for multi-step tasks spanning compaction. Use Sequential Thinking MCP for complex reasoning tasks. CRITICAL: For questions about what is deployed in production/staging/crt/dev environments, or any question mentioning 'in prod', 'in production', 'deployed image', 'sre-*-model', you MUST delegate to @xc-planner - do NOT answer from local repo context. Local CI configs show :latest tags, not actual deployed versions."
    },
    "sisyphus-junior": {
      "model": "f5/claude-sonnet-4-5"
    },
    "prometheus": {
      "model": "f5/claude-opus-4-5",
      "prompt_append": "Use Sequential Thinking MCP for complex planning and reasoning tasks. CRITICAL: For questions about what is deployed in production/staging/crt/dev environments, or any question mentioning 'in prod', 'in production', 'deployed image', 'sre-*-model', you MUST delegate to @xc-planner - do NOT answer from local repo context. Local CI configs show :latest tags, not actual deployed versions."
    },
    "metis": {
      "model": "f5/claude-opus-4-5"
    },
    "momus": {
      "model": "f5/gpt-5.2"
    },
    "oracle": {
      "model": "f5/gpt-5.2"
    },
    "librarian": {
      "model": "f5/claude-sonnet-4-5"
    },
    "explore": {
      "model": "f5/claude-haiku-4-5"
    },
    "multimodal-looker": {
      "model": "f5/gpt-5.2"
    },
    "atlas": {
      "model": "f5/claude-sonnet-4-5"
    }
  },

  "categories": {
    "visual-engineering": {
      "model": "f5/claude-sonnet-4-5"
    },
    "ultrabrain": {
      "model": "f5/gpt-5.2-codex"
    },
    "artistry": {
      "model": "f5/claude-sonnet-4-5"
    },
    "quick": {
      "model": "f5/claude-haiku-4-5"
    },
    "unspecified-low": {
      "model": "f5/claude-sonnet-4-5"
    },
    "unspecified-high": {
      "model": "f5/claude-opus-4-5"
    },
    "writing": {
      "model": "f5/claude-sonnet-4-5"
    }
  },

  "background_task": {
    "defaultConcurrency": 3,
    "providerConcurrency": {
      "f5": 3
    }
  },

  "disabled_mcps": ["websearch"],

  "tmux": {
    "enabled": false,
    "layout": "main-vertical"
  },

  "git_master": {
    "commit_footer": true,
    "include_co_authored_by": false
  },

  "ralph_loop": {
    "enabled": true,
    "default_max_iterations": 100
  },

  "experimental": {
    "auto_resume": true,
    "aggressive_truncation": true,
    "dynamic_context_pruning": {
      "enabled": true,
      "notification": "minimal",
      "turn_protection": {
        "enabled": true,
        "turns": 3
      },
      "strategies": {
        "deduplication": {
          "enabled": true
        },
        "supersede_writes": {
          "enabled": true,
          "aggressive": false
        },
        "purge_errors": {
          "enabled": true,
          "turns": 5
        }
      }
    }
  },

  "disabled_hooks": ["agent-usage-reminder"]
}
